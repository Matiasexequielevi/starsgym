  <div class="alerta-cumple alerta-proximos">
    <strong>üéÅ Pr√≥ximos Cumplea√±os</strong>
    <ul class="mb-2">
      <% proximosCumples.forEach(nombre => { %>
        <li>üéà <%= nombre %></li>
      <% }) %>
