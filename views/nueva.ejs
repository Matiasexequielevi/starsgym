<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Nuevo Cliente - STARS GYM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to bottom right, #00eaff, #a8f8ff);
      font-family: 'Segoe UI', sans-serif;
      position: relative;
    }

    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/images/logo-stars.png');
      background-repeat: repeat;
      background-size: 100px;
      opacity: 0.03;
      z-index: 0;
    }

    .container {
      position: relative;
      z-index: 1;
      max-width: 960px;
    }

    header {
      text-align: center;
      margin-top: 40px;
    }

    header img {
      width: 100px;
      border-radius: 50%;
      box-shadow: 0 0 20px #00b7c2;
      animation: glowExpand 3s infinite ease-in-out;
    }

    @keyframes glowExpand {
      0%, 100% {
        transform: rotate(0deg) scale(1);
        box-shadow: 0 0 20px #00b7c2;
      }
      50% {
        transform: rotate(360deg) scale(1.05);
        box-shadow: 0 0 40px #00eaff;
      }
    }

    h2 {
      font-weight: bold;
      color: #000;
      text-shadow: none;
      margin-top: 10px;
      margin-bottom: 30px;
    }

    .card {
      background: #ffffff;
      border-radius: 20px;
      border: 2px solid black;
      box-shadow: 0 0 18px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-bottom: 2rem;
    }

    label {
      font-weight: 500;
    }

    .btn-primary {
      background-color: #00b7c2;
      border: none;
      font-weight: bold;
    }

    .btn-outline-secondary {
      border-color: black;
      color: black;
      font-weight: 500;
    }

    .btn-outline-secondary:hover {
      background-color: black;
      color: white;
    }

    footer {
      color: #666;
      border-top: 2px solid black;
      padding: 1rem 0;
      text-align: center;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>

  <div class="container">
    <header>
      <img src="/images/logo-stars.png" alt="Logo Stars Gym">
      <h2>Nuevo Cliente</h2>
    </header>

    <a href="/" class="btn btn-outline-secondary mb-4">‚Üê Volver</a>

    <form action="/nueva" method="POST" class="card">
      <div class="row mb-3">
        <div class="col-md-6">
          <label>Nombre</label>
          <input type="text" name="nombre" class="form-control" required>
        </div>
        <div class="col-md-6">
          <label>Apellido</label>
          <input type="text" name="apellido" class="form-control" required>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <label>Nro DNI / ID</label>
          <input type="text" name="dni" class="form-control" required>
        </div>
        <div class="col-md-2">
          <label>Edad</label>
          <input type="number" name="edad" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label>Fecha de Nacimiento</label>
          <input type="date" name="fechaNacimiento" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label>Celular</label>
          <input type="text" name="celular" class="form-control" required>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <label>Direcci√≥n</label>
          <input type="text" name="direccion" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label>Fecha de Inicio</label>
          <input type="date" name="fechaInicio" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label>Fecha de Pago</label>
          <input type="date" name="fechaPago" class="form-control" required>
        </div>
      </div>

      <div class="mb-3">
        <label>Plan Elegido</label>
        <select name="plan" class="form-select" required>
          <option value="">Seleccionar plan...</option>
          <option value="B√°sico">B√°sico</option>
          <option value="Intermedio">Intermedio</option>
          <option value="Full">Full</option>
        </select>
      </div>

      <div class="mb-3">
        <label>Asistencia (d√≠as de entrenamiento)</label><br>
        <% const dias = ['lunes', 'martes', 'miercoles', 'jueves', 'viernes']; %>
        <% dias.forEach(dia => { %>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="asistencia.semanal.<%= dia %>" value="true">
            <label class="form-check-label text-capitalize"><%= dia %></label>
          </div>
        <% }) %>
      </div>

      <button type="submit" class="btn btn-primary w-100">üíæ Guardar Cliente</button>
    </form>

    <footer>
      Todos los derechos reservados - M.L DESARROLLOS WEB.
    </footer>
  </div>

</body>
</html>
