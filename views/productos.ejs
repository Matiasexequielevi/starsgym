<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Control de Productos y Stock - Stars Gym</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to bottom right, #e6faff, #f1fdff);
      font-family: 'Segoe UI', sans-serif;
    }

    header, footer {
      background-color: white;
      text-align: center;
      padding: 2rem 0;
      border-top: 2px solid black;
      border-bottom: 2px solid black;
    }

    header img {
      width: 100px;
      border-radius: 50%;
      margin-bottom: 0.5rem;
      box-shadow: 0 0 12px #00b7c2;
    }

    header h2 {
      font-weight: bold;
      text-shadow: 0 0 4px #00b7c2;
    }

    .container {
      max-width: 800px;
      margin-top: 30px;
    }

    .btn {
      min-width: 150px;
    }

    table {
      background: white;
      border-radius: 10px;
      overflow: hidden;
    }

    th {
      background: black;
      color: white;
    }

    .table td, .table th {
      vertical-align: middle;
    }

    .form-control, .form-select {
      border: 2px solid #ccc;
    }

    .volver-btn {
      position: absolute;
      top: 20px;
      left: 20px;
    }

    @media (max-width: 768px) {
      .volver-btn {
        position: static;
        margin-bottom: 1rem;
        display: block;
      }
    }
  </style>
</head>
<body>

  <!-- Header -->
  <header class="position-relative">
    <a href="/" class="btn btn-outline-dark volver-btn">← Volver</a>
    <img src="/images/logo-stars.png" alt="Logo Stars Gym">
    <h2>CONTROL DE PRODUCTOS Y STOCK</h2>
  </header>

  <div class="container">
    <!-- Tabla de productos -->
    <div class="table-responsive mb-5">
      <table class="table table-bordered text-center align-middle">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Precio ($)</th>
            <th>Stock</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(prod => { %>
            <tr>
              <td><%= prod.nombre %></td>
              <td>$<%= prod.precio.toFixed(2) %></td>
              <td><%= prod.stock %></td>
              <td>
                <form action="/productos/eliminar/<%= prod._id %>" method="POST" class="d-inline">
                  <input type="password" name="clave" placeholder="Clave" class="form-control mb-2" required>
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar producto?')">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Formulario agregar producto -->
    <div class="card shadow p-4">
      <h5 class="mb-4 fw-bold">Agregar nuevo producto</h5>
      <form action="/productos/nuevo" method="POST">
        <div class="row g-3">
          <div class="col-md-6">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre del producto" required>
          </div>
          <div class="col-md-3">
            <input type="number" step="0.01" name="precio" class="form-control" placeholder="Precio $" required>
          </div>
          <div class="col-md-3">
            <input type="number" name="stock" class="form-control" placeholder="Stock inicial" required>
          </div>
        </div>
        <div class="mt-3 d-flex justify-content-end">
          <button type="submit" class="btn btn-success">Guardar producto</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Footer -->
  <footer class="mt-5">
    <p class="mb-0">Todos los derechos reservados - M.L DESARROLLOS WEB</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
