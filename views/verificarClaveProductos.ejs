<!-- views/verificarClaveProductos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Clave de Productos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow" style="width: 300px;">
    <h5 class="mb-3 text-center">Clave para Productos</h5>
    <% if (error) { %>
      <div class="alert alert-danger py-1 text-center"><%= error %></div>
    <% } %>
    <form method="POST" action="/productos-verificar">
      <input type="password" name="claveSecreta" class="form-control mb-3" placeholder="Ingrese clave..." required />
      <button type="submit" class="btn btn-primary w-100">Ingresar</button>
    </form>
  </div>
</body>
</html>
